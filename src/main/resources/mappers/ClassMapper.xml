<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.solvd.db.mysql.mapper.ClassMapper">

    <resultMap id="classResultMap" type="com.solvd.db.mysql.model.ClassTable" autoMapping="false">
        <id property="id" column="id"/>
        <result property="roomNumber" column="room_number"/>
        <result property="schedule" column="schedule"/>
        <association property="courseId" resultMap="courseResultMap">
            <id property="id" column="id"/>
            <result property="name" column="name"/>
            <result property="credits" column="credits"/>
            <association property="departmentId" resultMap="departmentResultMap">
                <id property="id" column="id"/>
                <result property="name" column="name"/>
            </association>
        </association>
    </resultMap>

    <select id="classById" resultMap="classResultMap">
        select * from classes where id = #{id}
    </select>

    <select id="getAllClasses" resultMap="classResultMap">
        select * from classes
    </select>

    <insert id="createClass" parameterType="com.solvd.db.mysql.model.ClassTable">
        <selectKey keyProperty="id" resultType="long" order="AFTER">
            select last_insert_id()
        </selectKey>
        insert into classes (room_number, schedule, course_id)
        values (#{room_number}, #{schedule}, #{courseId.id})
    </insert>

    <update id="updateClass" parameterType="com.solvd.db.mysql.model.ClassTable">
        update classes set
        room_number = #{roomNumber},
        schedule = #{schedule},
        course_id = #{courseId.id}
        where id = #{id}
    </update>

    <delete id="deleteClass" parameterType="long">
        delete from classes where id = #{id}
    </delete>

</mapper>