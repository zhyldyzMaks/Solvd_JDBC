<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.solvd.db.mysql.mapper.TranscriptMapper">

    <resultMap id="transcriptResultMap" type="com.solvd.db.mysql.model.Transcript" autoMapping="false">
        <id property="id" column="id"/>
        <result property="grade" column="grade"/>
        <result property="completionDate" column="completion_date"/>
        <result property="studentId" column="student_id"/>
        <association property="courseId" resultMap="courseResultMap">
            <id property="id" column="id"/>
            <result property="name" column="name"/>
            <result property="credits" column="credits"/>
            <association property="departmentId" resultMap="departmentResultMap">
                <id property="id" column="id"/>
                <result property="name" column="name"/>
            </association>
        </association>
    </resultMap>

    <select id="transcriptById" resultMap="transcriptResultMap">
        select * from transcripts where id = #{id}
    </select>

    <select id="getAllTranscripts" resultMap="transcriptResultMap">
        select * from transcripts
    </select>

    <insert id="createTranscript" parameterType="com.solvd.db.mysql.model.Transcript">
        <selectKey keyProperty="id" resultType="long" order="AFTER">
            select last_insert_id()
        </selectKey>
        insert into transcripts (grade, completion_date, student_id, course_id)
        values (#{grade}, #{completionDate}, #{studentId.id}, #{courseId.id})
    </insert>

    <update id="updateTranscript" parameterType="com.solvd.db.mysql.model.Transcript">
        update transcripts set
        grade = #{grade},
        completion_date = #{completionDate},
        student_id = #{studentId.id},
        course_id = #{courseId.id}
        where id = #{id}
    </update>

    <delete id="deleteTranscript" parameterType="long">
        delete from transcripts where id = #{id}
    </delete>

</mapper>