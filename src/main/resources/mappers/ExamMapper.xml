<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.solvd.db.mysql.mapper.ExamMapper">

    <resultMap id="examResultMap" type="com.solvd.db.mysql.model.Exam" autoMapping="false">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="date" column="date"/>
        <association property="courseId" resultMap="courseResultMap">
            <id property="id" column="id"/>
            <result property="name" column="name"/>
            <result property="credits" column="credits"/>
            <association property="departmentId" resultMap="departmentResultMap">
                <id property="id" column="id"/>
                <result property="name" column="name"/>
            </association>
        </association>
    </resultMap>

    <select id="examById" resultMap="examResultMap">
        select * from exams where id = #{id}
    </select>

    <select id="getAllExams" resultMap="examResultMap">
        select * from exams
    </select>

    <insert id="createExam" parameterType="com.solvd.db.mysql.model.Exam">
        <selectKey keyProperty="id" resultType="long" order="AFTER">
            select last_insert_id()
        </selectKey>
        insert into exams (name, date, course_id)
        values (#{name}, #{date}, #{courseId.id})
    </insert>

    <update id="updateExam" parameterType="com.solvd.db.mysql.model.Exam">
        update exams set
        name = #{name},
        date = #{date},
        course_id = #{courseId.id}
        where id = #{id}
    </update>

    <delete id="deleteExam" parameterType="long">
        delete from exams where id = #{id}
    </delete>

</mapper>